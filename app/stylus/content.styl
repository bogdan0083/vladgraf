			&:before
				content ''
				sprite($accomplished)
				position absolute
				top 50%
				left 50%
				margin-top -(@height / 2) - 1px
				margin-left  -(@width / 2)
		&_visible
			width 38px
			height 38px
			transform scale(1)
			-webkit-transform scale(1) /* Для Safari, Chrome, iOS */
			&:before
				content ''
				sprite($circle_dots)
				position absolute
				top 50%
				left 50%
				margin-top -(@height / 2)
				margin-left  -(@width / 2)
		&:nth-child(2)
			left 110px
		&:nth-child(3)
			left 105 * 2 px
		&:nth-child(4)
			right 0px
			left auto
			
