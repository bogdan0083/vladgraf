// results

.results
	height 100vh
	background: url(../images/results-bg.jpg) no-repeat 70% / cover
	color white
	width 100%
	padding-top 100px
	z-index 10
	position relative
	overflow-y hidden
	&__in
		width 1262px
		margin 0 auto
		height 100vh
	&__heading
