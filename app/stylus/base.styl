// BUTTON STYLES

.button 
	color white
	display inline-block
	text-align center
	padding 0 15px
	&_blue
		background-color #1d7e9f
		text-shadow 0 1px 0 rgba(6, 7, 9, 0.16)
		border-radius 5px
