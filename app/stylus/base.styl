// POPUP

.popup
  position fixed
  width 100%
  height 100%
  background-color rgba(0, 0, 0, 0.7)
  z-index 2000
  height 0
  opacity 0
  overflow hidden
  transition opacity 0.3s
  &_visible
  	opacity 1
  	height 100%
  &__desc
    color white
    width 900px
    height 440px
    rb300()
    position absolute
    padding 75px 30px
    background  black url(../images/popup-bg.jpg) no-repeat 0
    top 50%
    left 50%
    margin-left -450px
    margin-top -(@height / 2)
    transition all 0.6s
    transition-delay 1s
  &__heading
    rbc700()
    font-size 26px
    text-transform uppercase
    margin-bottom 22px
  &__text
    margin-bottom 15px
    width 300px
    line-height 1.2
    &_changing
    	margin-bottom 25px
  &__phone
    margin-bottom 5px
    font-size 24px  
    &:first-child
    	margin-top 25px  	 	
  &__form
  	width 500px
  	height 530px
  	background-color #e9e9e9
  	position absolute
  	right 0
  	top -40px
  	color #1f1f1f
  	padding 40px 22px
